<% layout("/layouts/boilerplate") -%>
<div class="row mt-2">
  <div class="col-8 offset-2">
    <h3>Let's create a Note!</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter Title</div>
      </div>

      <div class="mb-3">
        <label for="content" class="form-label"><b>Notedown:</b></label>
        <textarea
          name="listing[content]"
          placeholder="Put down whatever in your mind.."
          type="text"
          class="form-control text-area"
          required
        ></textarea>
        <div class="invalid-feedback">Don't be sort of thinking!</div>
      </div>

      <div class="mb-3">
        <label for="date" class="form-label"><b>Date:</b></label>
        <input name="listing[date]" type="date" class="form-control" required />
        <div class="invalid-feedback">Please select the date!</div>
      </div>

      <button class="btn btn-dark btn-sm">Save</button>
    </form>
  </div>
</div>
