<% layout("/layouts/boilerplate") -%>

<div class="container mt-3">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
    <% for(let listing of allListings) { %>
    <div
      class="card col listing-card"
      style="width: 18rem; display: flex; flex-direction: column; height: 100%;"
    >
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card-body" style="flex-grow: 1">
          <h5 class="card-title"><%= listing.title %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            Date: <%= new Date(listing.date).toLocaleDateString("en-IN", { day:
            "numeric", month: "long", year: "numeric" }) %>
          </h6>
          <p class="card-text"><%= listing.content %></p>
        </div>
        <div class="card-footer text-muted text-center">
          <%= new Date(listing.date).toLocaleTimeString("en-IN", { hour:
          "2-digit", minute: "2-digit", hour12: true }) %>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>
