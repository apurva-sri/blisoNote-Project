<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <h1 class="col-6 offset-3 text-center signup">SignUp</h1>

  <div class="col-6 offset-3 signup-form">
    <form action="/signup" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
      <div class="mb-3">
        <label for="image" class="form-label"><b>Upload Profile photo:</b></label>
        <input
          name="image"
          id="image"
          type="file"
          class="form-control"
        />
        <div class="valid-feedback"></div>
      </div>

      <div class="mb-3">
        <label for="username" class="form-label"><b>Username</b></label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label"><b>Email</b></label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="dob" class="form-label"><b>DOB:</b></label>
        <input
          name="dob"
          id="dob"
          type="date"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label"><b>Password</b></label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>

      <button
        class="btn btn-dark"
        style="display: flex; justify-content: center; align-items: center"
      >
        SignUp
      </button>
    </form>
  </div>
</div>
